  this.Navigation = {};

  (function() {
    var calculateNavPosition, createMarkup, fixNavPosition, fixedNavStyle, releaseNavPosition, scrollPositionBelowNav, scrollToId, topOffsetById;
    this.initNavigation = function() {
      createMarkup();
      $('main').scroll(calculateNavPosition);
      return $('nav a').click(function() {
        return scrollToId($(this));
      });
    };
    createMarkup = function() {
      var navElements, navTpl;
      navElements = [
